<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_dashboard"
        android:layout_above="@id/bnv_dashboard"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/bottom_nav_color_state"
        app:itemIconTint="@color/bottom_nav_color_state"
        app:menu="@menu/dashboard_navigation_menu" />


</RelativeLayout>